<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ccanonizado.signlanguagetranslator">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignToText"
            android:configChanges="orientation"
            android:label="@string/sign_to_text"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TextToSign"
            android:configChanges="orientation"
            android:label="@string/text_to_sign"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Vocabulary"
            android:configChanges="orientation"
            android:label="Vocabulary"
            android:screenOrientation="portrait" />
    </application>

</manifest>